                    <div class="element-group">
                        <h4 class="element-group-title">Layouts</h4>
                        <div class="element-item" draggable="true" data-element-type="single-column">
                            <div class="element-preview single-column">
                                <div class="column"></div>
                            </div>
                            <h4>One Column</h4>
                        </div>
                        <div class="element-item" draggable="true" data-element-type="two-columns">
                            <div class="element-preview two-column">
                                <div class="column"></div>
                                <div class="column"></div>
                            </div>
                            <h4>Two Columns</h4>
                        </div>
                        <div class="element-item" draggable="true" data-element-type="three-columns">
                            <div class="element-preview three-column">
                                <div class="column"></div>
                                <div class="column"></div>
                                <div class="column"></div>
                            </div>
                            <h4>Three Columns</h4>
                        </div>
                    </div>
                </div>
                
                <!-- Items Tab Content -->
                <div class="elements-container" id="items-elements">
                    <div class="element-group">
                        <h4 class="element-group-title">Titles</h4>
                        <div class="element-item" draggable="true" data-element-type="title1">
                            <div class="title-element-headline">A choice case for every taste</div>
                            <div class="title-element-subheadline">Supporting text for headline</div>
                        </div>
                        <div class="element-item" draggable="true" data-element-type="title2">
                            <div class="title-element-headline">Don't miss out on savings</div>
                        </div>
                        <div class="element-item" draggable="true" data-element-type="title3">
                            <div class="title-element-headline">Make your Monday count</div>
