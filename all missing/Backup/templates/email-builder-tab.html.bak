                    </div>
                    
                    <div class="email-dropzone">
                        <p><i class="fas fa-plus-circle"></i> Drag elements here</p>
                    </div>
                </div>
            </div>
            
            <!-- Right Sidebar - Settings Panel -->
            <div class="email-settings-sidebar">
                <div class="settings-tabs">
                    <div class="settings-tab active" data-settings-tab="text">Text</div>
                    <div class="settings-tab" data-settings-tab="layout">Layout</div>
                </div>
                
                <!-- Text Settings Panel -->
                <div class="settings-panel active" id="text-settings-panel">
                    <div class="settings-group">
                        <h4>Text Style</h4>
                        <div class="form-group">
                            <label for="text-style">Type</label>
                            <select id="text-style" class="form-control">
                                <option value="paragraph">Paragraph</option>
                                <option value="heading1">Heading 1</option>
                                <option value="heading2">Heading 2</option>
                                <option value="heading3">Heading 3</option>
                            </select>
                        </div>
                    </div>
                    
                    <div class="settings-group">
                        <div class="form-row">
                            <div class="form-group">
                                <label for="font-family">Font</label>
                                <select id="font-family" class="form-control">
                                    <option value="arial">Arial</option>
                                    <option value="times">Times New Roman</option>
                                    <option value="verdana">Verdana</option>
                                    <option value="georgia">Georgia</option>
                                </select>
                            </div>
                            <div class="form-group">
                                <label for="font-size">Size</label>
                                <select id="font-size" class="form-control">
                                    <option value="12">12px</option>
                                    <option value="14">14px</option>
                                    <option value="16">16px</option>
                                    <option value="18">18px</option>
                                    <option value="20">20px</option>
                                    <option value="24">24px</option>
                                </select>
                            </div>
                        </div>
                    </div>
                    
                    <div class="settings-group">
                        <div class="form-row">
                            <div class="form-group">
                                <label for="line-height">Line Height</label>
                                <select id="line-height" class="form-control">
                                    <option value="1">Single</option>
                                    <option value="1.5">1.5</option>
                                    <option value="2">Double</option>
                                </select>
                            </div>
                            <div class="form-group">
                                <label for="letter-spacing">Letter Spacing</label>
                                <select id="letter-spacing" class="form-control">
                                    <option value="normal">Normal</option>
                                    <option value="1">Wide</option>
                                    <option value="2">Wider</option>
                                </select>
                            </div>
                        </div>
                    </div>
                    
                    <div class="settings-group">
                        <h4>Formatting</h4>
                        <div class="text-formatting-toolbar">
                            <button class="format-button" data-format="bold" title="Bold"><i class="fas fa-bold"></i></button>
                            <button class="format-button" data-format="italic" title="Italic"><i class="fas fa-italic"></i></button>
                            <button class="format-button" data-format="underline" title="Underline"><i class="fas fa-underline"></i></button>
                            <button class="format-button" data-format="strikethrough" title="Strikethrough"><i class="fas fa-strikethrough"></i></button>
                            <button class="format-button" data-format="align-left" title="Align Left"><i class="fas fa-align-left"></i></button>
                            <button class="format-button" data-format="align-center" title="Align Center"><i class="fas fa-align-center"></i></button>
                            <button class="format-button" data-format="align-right" title="Align Right"><i class="fas fa-align-right"></i></button>
                            <button class="format-button" data-format="list-ul" title="Bullet List"><i class="fas fa-list-ul"></i></button>
                            <button class="format-button" data-format="list-ol" title="Numbered List"><i class="fas fa-list-ol"></i></button>
                            <button class="format-button" data-format="link" title="Insert Link"><i class="fas fa-link"></i></button>
                        </div>
                    </div>
                    
                    <div class="settings-group">
                        <h4>Colors</h4>
                        <div class="form-group">
                            <label for="text-color">Text Color</label>
                            <div class="color-picker">
                                <input type="text" id="text-color" class="form-control color-input" value="#333333">
                                <div class="color-preview" id="text-color-preview"></div>
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="background-color">Background Color</label>
                            <div class="color-picker">
                                <input type="text" id="background-color" class="form-control color-input" value="#ffffff">
                                <div class="color-preview" id="background-color-preview"></div>
                            </div>
                        </div>
                    </div>
                    
                    <div class="settings-group">
                        <h4>Spacing</h4>
                        <div class="form-group">
                            <label>Padding</label>
                            <div class="spacing-controls">
                                <div class="spacing-control">
                                    <label for="padding-top">Top</label>
                                    <input type="number" id="padding-top" class="form-control" value="10" min="0" max="100" title="Top padding value" aria-label="Top padding value">
                                    <span>px</span>
                                </div>
                                <div class="spacing-control">
                                    <label for="padding-right">Right</label>
                                    <input type="number" id="padding-right" class="form-control" value="10" min="0" max="100" title="Right padding value" aria-label="Right padding value">
                                    <span>px</span>
                                </div>
                                <div class="spacing-control">
                                    <label for="padding-bottom">Bottom</label>
                                    <input type="number" id="padding-bottom" class="form-control" value="10" min="0" max="100" title="Bottom padding value" aria-label="Bottom padding value">
                                    <span>px</span>
                                </div>
                                <div class="spacing-control">
                                    <label for="padding-left">Left</label>
                                    <input type="number" id="padding-left" class="form-control" value="10" min="0" max="100" title="Left padding value" aria-label="Left padding value">
                                    <span>px</span>
                                </div>
                                <div class="spacing-control">
                                    <label for="padding-all">All</label>
                                    <input type="number" id="padding-all" class="form-control" value="10" min="0" max="100" title="All sides padding value" aria-label="All sides padding value">
                                    <span>px</span>
                                </div>
                            </div>
                        </div>
                    </div>
                    
                    <button class="btn btn-primary btn-block">Update Text</button>
                </div>
                
                <!-- Layout Settings Panel -->
                <div class="settings-panel" id="layout-settings-panel">
                    <div class="settings-group">
                        <h4>Email Settings</h4>
                        <div class="form-group">
                            <label for="canvas-width">Canvas Width</label>
                            <div class="form-row">
                                <input type="number" id="canvas-width" class="form-control" value="600" min="400" max="800">
                                <span>px</span>
                            </div>
                            <small>We recommend using a 600-700px width</small>
                        </div>
                    </div>
                    
                    <div class="settings-group">
                        <h4>Theme Settings</h4>
                        <div class="form-group">
                            <label for="theme-background">Background</label>
                            <div class="color-picker">
                                <input type="text" id="theme-background" class="form-control color-input" value="#f0f0f0" title="Theme background color" aria-label="Theme background color">
                                <div class="color-preview" id="theme-background-preview"></div>
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="button-style">Button Style</label>
                            <select id="button-style" class="form-control" title="Button style" aria-label="Button style">
                                <option value="rounded">Rounded</option>
                                <option value="square">Square</option>
                                <option value="pill">Pill</option>
                            </select>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
